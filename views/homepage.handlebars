{{!< main}}

{{!-- Content specific to the homepage --}}

<section class="bg-stone shadow-lg rounded-lg p-8 text-emerald">
    <h2 class="text-3xl font-semibold mb-4"></h2>
    <p class="mb-8"></p>
    {{!-- If the user is logged in, show their name and a logout button--}}
    {{#if user}}
        <p class="mb-8">Welcome, {{user.username}}!</p>
        <a href="/logout" class="bg-yellow hover:bg-battership-gray text-white px-4 py-2 rounded-full transition duration-300 ease-in-out">
            Logout
    {{/if}}
    {{!-- If the user is not logged in, show the login and signup buttons --}}
    {{#unless user}}
        <div class="space-x-4 text-center">
            <a href="/login" class="bg-yellow hover:bg-battership-gray text-white px-4 py-2 rounded-full transition duration-300 ease-in-out">
                Login
            </a>
            <a href="/signup" class="bg-yellow hover:bg-battership-gray text-white px-4 py-2 rounded-full transition duration-300 ease-in-out">
                Sign Up
            </a>
        </div>
    {{/unless}}
    <div class="mt-8 text-center">
        {{!-- If the user is logged in, show the start game button --}}
        {{#if user}}
            <a href="/start" class="bg-yellow hover:bg-battership-gray  text-white px-6 py-3 rounded-full text-xl font-semibold transition duration-300 ease-in-out">
                Start Game
            </a>
        {{/if}}
    </div>
</section>

